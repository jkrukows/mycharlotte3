<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android" >
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#2881ab" />
                <gradient android:angle="-90" android:startColor="#2268ae" android:endColor="#369bd6"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#468be1" />
                <solid android:color="#237cd6"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#2881ab" />
                <gradient android:angle="-90" android:startColor="#2268ae" android:endColor="#369bd6" />
            </shape>
        </item>

</selector>